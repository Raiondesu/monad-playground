{
  "compilerOptions": {
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "downlevelIteration": true,
    "target": "es2015",
    "strict": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext"
    ],
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "module": "es2015",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strictBindCallApply": true,
    "strictNullChecks": true
  }
}
